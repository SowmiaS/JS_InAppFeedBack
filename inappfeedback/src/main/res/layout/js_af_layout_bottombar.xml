<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/af_ll_topbar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/af_base_color_fluorescent_green"
    android:orientation="horizontal"
    android:padding="@dimen/af_base_dimen_common_leftright_layout_padding">

    <ImageButton
        android:id="@+id/af_imgbutton_bottombar_draw"
        style="@style/af_base_button"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/af_base_dimen_5dp"
        android:src="@drawable/ic_create_black_24dp" />


    <ImageButton
        android:id="@+id/af_imgbutton_bottombar_text"
        style="@style/af_base_button"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/af_base_dimen_5dp"
        android:src="@drawable/ic_text_format_black_24dp" />


    <ImageButton
        android:id="@+id/af_imgbutton_bottombar_delete"
        style="@style/af_base_button"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/af_base_dimen_5dp"
        android:src="@drawable/ic_delete_sweep_black_24dp" />

</RelativeLayout>
