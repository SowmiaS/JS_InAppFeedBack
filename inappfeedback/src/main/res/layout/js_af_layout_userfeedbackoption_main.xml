<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/js_af_ll_userfeedback_main_topbar"
        layout="@layout/js_af_layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/af_base_dimen_button_height"></include>

    <com.js.inappfeedback.ui.AFDrawingView
        android:id="@+id/js_af_ll_userfeedback_main_screenshotimg"
        android:layout_below="@+id/js_af_ll_userfeedback_main_topbar"
        android:layout_above="@+id/js_af_ll_userfeedback_main_bottombar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">
    </com.js.inappfeedback.ui.AFDrawingView>

    <com.js.inappfeedback.ui.AFInputBoxView
        android:id="@+id/js_af_ll_userfeedback_main_inputbox"
        android:layout_above="@+id/js_af_ll_userfeedback_main_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:visibility="invisible"/>

    <include
        android:id="@+id/js_af_ll_userfeedback_main_bottombar"
        android:layout_alignParentBottom="true"
        layout="@layout/js_af_layout_bottombar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/af_base_dimen_button_height">
    </include>


</RelativeLayout>
