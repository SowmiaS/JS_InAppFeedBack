<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/af_ll_topbar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/af_base_dimen_common_leftright_padding"
    android:background="@color/af_base_color_fluorescent_green">

    <ImageButton
        android:id="@+id/af_imgbutton_bottombar_draw"
        style="@style/af_base_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center|left"
        android:src="@drawable/ic_create_black_24dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/af_imgbutton_bottombar_text"
        style="@style/af_base_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_text_format_black_24dp"
         />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/af_imgbutton_bottombar_delete"
        style="@style/af_base_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center|right"
        android:src="@drawable/ic_delete_sweep_black_24dp" />

</LinearLayout>
